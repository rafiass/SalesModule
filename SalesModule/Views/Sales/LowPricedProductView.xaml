<UserControl x:Class="SalesModule.Views.LowPricedProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:v="clr-namespace:SalesModule.Views"
             mc:Ignorable="d" d:DesignHeight="405" d:DesignWidth="288">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <v:DiscountView Grid.Row="2" />
        
        <Button Content="Properties..." Command="{Binding PropertiesCommand}" Width="100"
                HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>
